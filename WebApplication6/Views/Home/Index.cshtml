@{
    ViewBag.Title = "Главная страница";
}
<h2>@ViewData["Text"]</h2>
<h3>Список</h3>
<ol type="A"> @for (int i = 1; i < 5; i++)
    {
        <li>элемент @i списка</li>
    } 
</ol>
<hr>
<h3>Форма</h3>

<form method="post">
    <select asp-items="@ViewData["Lst"] as SelectList"></select>
    <div class="nav-check" style="width:50%;">
        <div class="form-check nav-margin">
            <input class="form-check-input" type="checkbox" name="checkbox1">Чек-бокс 1<Br>
            <input class="form-check-input" type="checkbox" name="checkbox2">Чек-бокс 2<Br>
        </div>
        <Br>
        <div class="nav-margin">
            <input type="radio" name="radio1">Радио 1
            <input type="radio" name="radio2">Радио 2
            <input type="radio" name="radio3">Радио 3
        </div>
    </div>
    <Br>
    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Логин:</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail3" placeholder="Email" name="login">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Пароль:</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPassword3" placeholder="Password" name="password">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    </div>
</form>